<h1><%= @user.name %>さんのページ</h1>
<p><%= image_tag @user.icon.url , :size =>'100x100'%></p>
<p>メールアドレス : <%= @user.email %></p>
<p><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %></p>
  <%= link_to '編集', edit_user_registration_path(@user) %>

<p>主催しているイベント一覧</p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th>O</th>
      <th>E date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.content %></td>
        <td><%= image_tag event.image.url, :size =>'100x100' %></td>
        <td><%= event.e_date_start %>~<%= event.e_date_end %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
