<h1><%= @user.name %>さんのページ</h1>
<p><%= image_tag @user.icon.url , :size =>'100x100'%></p>
<p>メールアドレス : <%= @user.email %></p>
<p><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %></p>
<p><%= link_to '編集', edit_user_registration_path(@user),class: "btn btn-light" %></p>

<p>主催しているイベント一覧</p>
<table>
  <thead>
    <tr>
      <th>イメージ</th>
      <th>タイトル</th>
      <th>イベント開催日時</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |event| %>
      <tr>
        <td><%= image_tag event.image.url, :size =>'100x100' %></td>
        <td><%= event.title.truncate(50) %></td>
        <td><%= event.e_date_start %>~<%= event.e_date_end %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>
