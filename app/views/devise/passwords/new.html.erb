<div class="text-center ">
  <div class="comtainer">
    <h2>パスワードを忘れましたか？</h2>
    <%= form_for(resource, as: resource_name,class:"form-signin", url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <br>
      <div class="row justify-content-center">
        <%= f.label :email ,class: "sr-only"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control",id: "inputUser",placeholder: "Emailアドレス" %>
      </div>
      <br>
      <div class="row justify-content-center col-xs-3">
        <%= f.submit "パスワード変更のリンクを送信" ,class: "btn btn-lg btn-primary "%>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
