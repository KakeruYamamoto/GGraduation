<div class="text-center">
  <div class="container">
    <br>
    <h2>パスワード変更</h2>
    <%= form_for(resource, as: resource_name,class:"form-signin", url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <br>
      <div class="row justify-content-center">
        <%= f.label :password, "New password" ,class: "sr-only" %><br />
        <% if @minimum_password_length %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class: "form-control",id: "inputUser", placeholder: "パスワード(#{@minimum_password_length}文字以上)" %>
        <% end %>
      </div>
      <br>
      <div class="row justify-content-center">
        <%= f.label :password_confirmation, "Confirm new password",class: "sr-only" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control",id: "inputUser", placeholder: "確認用パスワード" %>
      </div>
      <br>
      <div class="row justify-content-center col-xs-3">
        <%= f.submit "パスワードを変更" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
