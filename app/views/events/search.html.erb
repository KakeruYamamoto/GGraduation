<div class="text-center">
  <div class="container">
    <br>
    <h2>検索結果</h2>
    <table>
      <thead>
        <tr>
          <th>Image</th>
          <th>Title</th>
          <th>Content</th>
          <th>E date</th>
          <th>Address</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
        <tr>
          <td><%= image_tag event.image.url, :size =>'100x100' %></td>
          <td><%= event.title %></td>
          <td><%= event.content %></td>
          <td><%= event.e_date_start %>~<%= event.e_date_end %></td>
          <td><%= event.address %></td>
          <td><%= link_to '詳細', event ,class: "btn btn-outline-secondary"%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
