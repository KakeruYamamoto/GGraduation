<p id="notice"><%= notice %></p>

<h1>参加予定のイベント</h1>
<p>ようこそ<%= current_user.name %>さん</p>
<table>
  <thead>
    <tr>
      <th>イメージ</th>
      <th>タイトル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parthicipante_events.each do |event| %>
      <tr>
        <td><%= image_tag event.image.url, :size =>'100x100' %></td>
