<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
  <% unless @event.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'あとで見るリストから外す', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'あとで見る', favorites_path(event_id: @event.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>
<% end %>
<p>
  <strong>タイトル:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>イベント内容:</strong>
  <%= markdown(@event.content) %>
</p>

<p>
  <strong>イメージ:</strong>
  <%= image_tag @event.image.url %>
</p>

<p>
  <strong>イベント開催日時:</strong>
  <%= @event.e_date_start %>~<%= @event.e_date_end %>
</p>

<p>
  <strong>ラベル:</strong>
  <span class="labels"><% @event.labels.each do |label| %>
  <%= label.name %>
  <% end %></span>
</p>

<% if @parthicipante_users.present? %>
  <h4>参加者</h4>
  <% @parthicipante_users.each do |parthicipante| %>
  <p><%= parthicipante.name %>さん</p>
  <% end %>
<% end %>

<% if user_signed_in? %>
  <% unless @event.user_id == current_user.id %>
    <% if @current_user_parthicipant.present? %>
      <%= link_to '参加をキャンセルする', parthicipant_management_path(id: @parthicipante.ids), method: :delete, class: 'btn btn-danger' %><br>
    <% else %>
      <%= link_to '参加する', parthicipant_managements_path(event_id: @event.id), method: :post, class: 'btn btn-primary' %><br>
    <% end %>
  <% end %>
  <%= link_to 'お問い合わせ', new_contact_path(event_id: @event.id), class: "btn btn-link" %><br>
<% end %>

<%= link_to '編集', edit_event_path(@event),class: "btn btn-outline-danger" %>

<%= link_to '戻る', events_path,class: "btn btn-outline-secondary" %>
